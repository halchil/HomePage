<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Blog</title>
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body class="bg-gray-100 text-gray-800">

    <div class="container mx-auto p-4">
    <h1 class="text-4xl font-bold mb-4 text-center">Blog</h1>

    <nav class="flex justify-center space-x-4 mb-8">
      <a href="/" class="text-blue-500 hover:text-blue-700">Home</a>
      <a href="/music" class="text-blue-500 hover:text-blue-700">Music</a>
      <a href="/about" class="text-blue-500 hover:text-blue-700">About</a>
      <a href="/blog" class="text-blue-500 hover:text-blue-700">Blog</a>
    </nav>

    <% posts.forEach(post => { %>
      <div class="mb-8 bg-white p-4 rounded shadow">
        <h2 class="text-2xl font-bold mb-2"><%= post.title %></h2>
        <div><%- post.content %></div>
      </div>
    <% }) %>

  </div>
</body>

</html>