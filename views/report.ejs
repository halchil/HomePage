<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body class="bg-gray-100 text-gray-800">
    <div class="bg-gray-100 flex">
        <!-- 縦帯の画像 -->
        <div class="bg-contain bg-center w-64 h-screen" style="background-image: url('/images/name.png');">
        </div>

        <!-- 右側 -->
        <div class="bg-gray-200 flex-1 p-4">
        <%- include('partials/header') %>
        
            <div class="mt-10 space-y-8 p-10">
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% reports.forEach(report => { %>
                  <div class="bg-white p-6 rounded-lg shadow-md flex flex-col">
                    <div class="flex items-center mb-4">
                      <svg class="w-8 h-8 text-red-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded"><%= report.category %></span>
                    </div>
                    <h3 class="text-lg font-semibold mb-2"><%= report.title %></h3>
                    <p class="text-gray-600 text-sm mb-4 flex-grow"><%- report.description %></p>
                    
                    <!-- タグ表示 -->
                    <% if (report.tags && report.tags.length > 0) { %>
                      <div class="flex flex-wrap gap-1 mb-4">
                        <% report.tags.forEach(tag => { %>
                          <span class="bg-gray-100 text-gray-700 text-xs font-medium px-2 py-1 rounded-full border border-gray-300">
                            <%= tag %>
                          </span>
                        <% }) %>
                      </div>
                    <% } %>
                    
                    <div class="flex justify-between items-center">
                      <span class="text-gray-500 text-xs"><%= report.date %></span>
                      <a href="/reports/<%= report.filename %>" target="_blank" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded text-sm font-medium transition-colors flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        表示
                      </a>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
         </div>
    </div>
</body>
</html> 